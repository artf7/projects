<UserControl x:Class="Media_Player.PlaybackControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Media_Player"
             mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <MediaElement x:Name="mediaPlayer" Visibility="Collapsed"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Play" Click="PlayButton_Click" Width="50"/>
            <Button Content="Pause" Click="PauseButton_Click" Width="50"/>
            <Button Content="Stop" Click="StopButton_Click" Width="50"/>
        </StackPanel>
    </StackPanel>
</UserControl>
